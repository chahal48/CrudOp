@model CrudOp.Models.ContactModel
@using CrudOp.Models
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="form-group">
    <div class="row">
        <div class="col-md-5">
            <label asp-for="fName" class="control-label"></label>
            <input type="text" asp-for="fName" class="form-control" />
            <span asp-validation-for="fName" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="lName" class="control-label"></label>
            <input type="text" asp-for="lName" class="form-control" />
            <span asp-validation-for="lName" class="text-danger"></span>
        </div>
    </div>
</div>
<br />
<div class="form-group">
    <div class="row">
        <div class="col-md-5">
            <label asp-for="emailAddr" class="control-label"></label>
            <input type="text" asp-for="emailAddr" class="form-control" />
            <span asp-validation-for="emailAddr" class="text-danger"></span>
            <input asp-for="initialEmail" type="hidden" />
        </div>
        <div class="col-md-5">
            <label asp-for="ProfessionID" class="control-label"></label>
            <select class="form-control form-select" asp-for="ProfessionID" asp-items="@ViewBag.itemList">
                <option selected="selected" value="">Select Profession</option>
            </select>
            <span asp-validation-for="ProfessionID" class="text-danger"></span>
        </div>
    </div>
</div>
<br />
<div class="form-group">
    <div class="row">
        <div class="col-md-5">
            <label asp-for="Company" class="control-label"></label>
            <input type="text" asp-for="Company" class="form-control" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <div class="col-md-5">
            <label asp-for="Category" class="control-label"></label>
            <select asp-for="Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control form-select">
                <option selected="selected" value="">Select Category</option>
            </select>
            <span asp-validation-for="Category" class="text-danger" />
        </div>
    </div>
</div>
<br />
<div class="form-group">
    <div class="row">
        <div class="col-md-3">
            <label asp-for="DOB" class="control-label"></label>
            <input type="Date" asp-for="DOB" class="form-control" />
            <span asp-validation-for="DOB" class="text-danger"></span>
            <br />
            <label asp-for="Gender" class="control-label"></label>
            <input type="radio" asp-for="Gender" value="@Gender.Male" checked="checked" /> @Gender.Male &nbsp;
            <input type="radio" asp-for="Gender" value="@Gender.Female" /> @Gender.Female &nbsp;
            <input type="radio" asp-for="Gender" value="@Gender.Other" /> @Gender.Other
            <br />
            <span asp-validation-for="Gender" class="text-danger" />
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <label asp-for="Mode" class="control-label"></label><br />
            <input type="checkbox" asp-for="ModeSlack" />
            <label asp-for="ModeSlack" class="control-label"></label><br />
            <input type="checkbox" asp-for="ModeEmail" />
            <label asp-for="ModeEmail" class="control-label"></label><br />
            <input type="checkbox" asp-for="ModePhone" />
            <label asp-for="ModePhone" class="control-label"></label><br />
            <input type="checkbox" asp-for="ModeWhatsapp" />
            <label asp-for="ModeWhatsapp" class="control-label"></label><br />
        </div>
    </div>
</div>
